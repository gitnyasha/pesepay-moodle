<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="payment/gateway/pesepay/db" VERSION="2025090800" COMMENT="XMLDB file for Pesepay payment gateway plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="paygw_pesepay" COMMENT="Stores pesepay related information">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="paymentid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="component" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="paymentarea" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="itemid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="merchantref" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="reference" TYPE="char" LENGTH="255" NOTNULL="false"/>
        <FIELD NAME="pollurl" TYPE="text" NOTNULL="false"/>
        <!-- store amount in minor units (cents) as integer to avoid XMLDB number issues -->
        <FIELD NAME="amount" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="currency" TYPE="char" LENGTH="3" NOTNULL="true"/>
        <FIELD NAME="description" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="status" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="initiated"/>
        <FIELD NAME="rawresponse" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="false"/>
      </FIELDS>

      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="idx_paymentid" TYPE="index" FIELDS="paymentid"/>
        <KEY NAME="idx_merchantref" TYPE="unique" FIELDS="merchantref"/>
        <KEY NAME="idx_reference" TYPE="index" FIELDS="reference"/>
        <KEY NAME="idx_user" TYPE="index" FIELDS="userid"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
